<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!---   Button Theme   -->
        <item name="android:buttonStyle">@style/MyButton</item>


        <!---   TextView Theme   -->
        <item name="android:textViewStyle">@style/TextView</item>
    </style>


    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:background">@drawable/button_login</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:color">@color/color_white</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="BottomBar" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>
