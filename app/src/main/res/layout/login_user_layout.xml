<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bachground_fill_white"
    >

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_user"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:layout_margin="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/email_or_mobile_number"
        />
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/email_or_mobile_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:hint="@string/email_or_mobile_number"
        android:textColorHint="@color/colorGrey1"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:inputType="text"
        android:gravity="right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toTopOf="@id/password"
        />
    <view
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorBlack"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:id="@+id/email_line"
        app:layout_constraintStart_toStartOf="@id/email_or_mobile_number"
        app:layout_constraintEnd_toEndOf="@id/email_or_mobile_number"
        app:layout_constraintTop_toBottomOf="@id/email_or_mobile_number"
        />
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/password"
        android:textColorHint="@color/colorGrey1"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:inputType="numberPassword"
        android:gravity="right"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/email_line"
        app:layout_constraintBottom_toTopOf="@id/sign_in"
        />
    <view
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorBlack"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="@id/password"
        app:layout_constraintEnd_toEndOf="@id/password"
        app:layout_constraintTop_toBottomOf="@id/password"
        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"
        android:id="@+id/sign_in"
        android:text="@string/sign_in"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/color_white"
        android:textStyle="bold"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/button_round_dark"
        android:layout_marginBottom="@dimen/_150sdp"
        app:layout_constraintTop_toBottomOf="@+id/or"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>