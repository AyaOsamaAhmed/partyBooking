<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_image"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginTop="@dimen/_10sdp"
        tools:src="@drawable/profile_image_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/pick_image_profile"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/plus"
        app:layout_constraintEnd_toEndOf="@id/user_image"
        app:layout_constraintBottom_toBottomOf="@id/user_image"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        tools:text="Aya Osama"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_18sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_image"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/brief_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:text="@string/brief_about_me"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_18sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_name"
        />
<com.google.android.material.textfield.TextInputEditText
    android:id="@+id/write_somthing"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    tools:text="@string/write_something"
    android:textColor="@color/colorBlack"
    android:padding="@dimen/_5sdp"
    android:gravity="start"
    android:textSize="@dimen/_12sdp"
    android:background="@drawable/button_round_grey"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/brief_name"
    app:layout_constraintEnd_toEndOf="parent"
    />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/business"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:text="@string/business"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_18sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/write_somthing"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bussniss_recycler"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:listitem="@layout/business_item_list_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/business"
        />
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/add_business"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/plus"
        app:layout_constraintEnd_toEndOf="@id/bussniss_recycler"
        app:layout_constraintBottom_toBottomOf="@id/bussniss_recycler"
        />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:text="@string/amount_customer_pays"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_18sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bussniss_recycler"
        />
    <LinearLayout
        android:id="@+id/amount_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amount"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:text="22,000"
            android:background="@color/colorGrey"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_13sdp"
            android:gravity="end"
            android:padding="@dimen/_5sdp"
            android:inputType="number"
            />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="wrap_content"
            android:text="S.R"
            android:background="@color/colorBlack"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_13sdp"
            android:padding="@dimen/_5sdp"
            />
    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/live_broadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:text="@string/live_broadcast"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_18sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amount_linear"
        />


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/broadcast"
        android:layout_width="@dimen/_75sdp"
        android:layout_height="@dimen/_75sdp"
        android:background="@color/colorPrimary"
        android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/broadcast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/live_broadcast"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_20sdp"
        android:text="@string/save"
        android:textColor="@color/color_white"
        android:textSize="@dimen/_20sdp"
        android:background="@drawable/button_round_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>